
<!-- col-xs-3のcss -->
<style>
.each_item {
	padding: 0px 5px;
	height: 250px;
	margin-top: 15px;
	overflow-y: scroll;
}

.eyecatch {
	width: 100%;
	height: 600px;
	background-position: center;
	background-size: cover;
}

</style>

	<div class="row" style="width: 90%; margin: 20px auto;">
	<img src="/assets/tart1" alt="非表示", class="eyecatch">
		<h1>PRODUCTS</h1>
		<span ><strong>ジャンルで検索</strong></span>
			<% @genres.each do |genre| %>

	 				<%= link_to root_path(genre: genre.id) do %>
	 					<span style = "background-color: #2D714C" class="badge"><%= genre.name %></span>
	 				<% end %>
   		 		<% end %>

   		 <div class="row">
			<% @products.each do |product| %>
					<div class="col-xs-3 each_item">
						<%= link_to product_path(product) do %>
						  <%= attachment_image_tag product, :image, style:"width:100%; bottom: 45px;" %>
						<% end %>
						<%= product.name %>
						<%= product.price %>円<br>
						<%= product.introduction%>
					</div>
			<% end %>
		</div>
	</div>
