<div class="edit_container" style="width: 50%; margin: 20px auto;">

<%= form_for(@user, url:admins_user_path, method: :patch) do |f| %>
<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">会員情報編集</h4>
  <label>会員ID</label>
    <%= @user.id %>
<div class="form-group">
    <label>氏名</label>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
</div>

  <div class="form-group">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="form-group">
    <label>郵便番号（ハイフンなし）</label>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

   <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", style:"width: 80%;" %>
  </div>

  <div class="form-group">
    <label>電話番号</label>
    <%= f.telephone_field :phone, autofocus: true, autocomplete: "phone" %>
  </div>

  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
    <% if @user.is_deleted? %>
       <%= link_to toggle_admins_user_path(@user), method: :patch do %>
          <span class="btn btn-info">会員にする</span>
       <% end %>
    <% else %>
       <%= link_to toggle_admins_user_path(@user), method: :patch, data: { confirm: '本当に退会させますか？' } do %>
            <span class="btn btn-danger">退会させる</span>
       <% end %>
    <% end %>
        <hr>
    <div class="btn-group" style="width: 50%; height: 100px; margin: 0 auto; display: block;">
      <%= link_to '会員詳細に戻る', admins_user_path(@user), class:"btn btn-default", style:"display:inline-block;" %>
      <%= f.submit "変更を保存する", class:"btn btn-success", style:"display:inline-block;" %>
    </div>

<% end %>

</div>
